{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "strict": true,
    "alwaysStrict":true,
    "types": ["node", "@types/jest"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "./test"],
  "exclude": [ "./jest", "**/node_modules/*", "./lib", "./dist"]
}
